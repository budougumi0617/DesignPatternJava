#include <LiquidCrystal.h>

LiquidCrystal lcd = LiquidCrystal(5, 6, 7, 8, 9, 10, 11);
int counter = 0;
const int maxlen = 17;
char buff[maxlen];

void setup() {
  Serial.begin(9600);
}

void loop(){

    if (Serial.available()>0){
        char data = Serial.read();

        if(data != '\0'){
            buff[counter] = data;
            counter++;
        }else {
            lcd.print(buff);
            counter = 0;
            buff[maxlen] = {0};         
        } 
    }
}
